{
	"name": "@intenda/opus-ui-example",
	"description": "An Opus UI example application",
	"version": "1.5.0",
	"keywords": [
		"opus-ui",
		"example",
		"opus"
	],
	"scripts": {
		"start": "concurrently --kill-others \"nodemon node_modules/@intenda/opus-ui-packager/src/packager.js --includePaths=true\" \"npm run dev -- --host\"",
		"dev": "vite --port 3000",
		"build-json": "node node_modules/@intenda/opus-ui-packager/src/packager.js",
		"build": "vite build"
	},
	"dependencies": {
		"@intenda/opus-ui": ">=1.0.0 < 2.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@intenda/opus-ui-packager": ">=1.0.0 < 2.0.0",
		"@intenda/vite-plugin-opus-hot-reload": ">=1.0.0 < 2.0.0",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"concurrently": "^8.2.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"nodemon": "^3.1.0",
		"vite": "^5.0.8"
	},
	"nodemonConfig": {
		"ignore": [],
		"watch": [
			"app"
		],
		"ext": "js,json,md",
		"ignoreRoot": [],
		"delay": 100
	}
}