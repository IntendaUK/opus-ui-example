{
    "type": "containerSimple",
    "prps": {
        "singlePage": true,
        "backgroundColor": "themeBackground",
        "mainAxisAlign": "center",
        "crossAxisAlign": "center",
        "gap": "24px"
    },
    "wgts": [
        {
            "traits": [
                {
                    "trait": "title",
                    "traitPrps": {
                        "title": "Opus UI Example Application"
                    }
                }
            ]
        },
        {
            "type": "clicker",
            "prps": {
                "topText": "Click me",
                "bottomText": "You have clicked %1 time(s)",
                "color": "{theme.colors.themeWhite}"
            }
        },
        {
            "type": "label",
            "prps": {
                "caption": "App Mode: {theme.system.appMode}",
                "position": "absolute",
                "right": "mediumPadding",
                "bottom": "mediumPadding",
                "color": "themeTeal"
            }
        }
    ]
}